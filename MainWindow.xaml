
<Window x:Class="MyWPFApp.RecentNews"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWPFApp"
        mc:Ignorable="d"
        Title="RecentNews" Height="450" Width="800">
        <Window.Resources>
        <System:String x:Key="test">hrrs</System:String>
         </Window.Resources>
    <Grid>
        <TextBox IsReadOnly="True" Name="TextBox1" Height="600" Width="600"   
            Text="{Binding Path=NewsTitle, Mode=OneWay}" 
            Margin="10,10,0,0" VerticalAlignment="Top"  
            HorizontalAlignment="Left" BorderThickness="0" TextWrapping="Wrap">  
        </TextBox>
        <TextBox IsReadOnly="True" Name="TextBox2" Height="600" Width="600"   
            Text="{Binding Path=Description, Mode=OneWay}" 
            Margin="50,50,0,0" VerticalAlignment="Top"  
            HorizontalAlignment="Left" BorderThickness="0" TextWrapping="Wrap">  
        </TextBox>
        <Image Source="{Binding Path=ImageSource}" Height="{Binding Path=ImageHeight}" Width="{Binding Path=ImageWidth}" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"  />
    </Grid>
    
</Window>
